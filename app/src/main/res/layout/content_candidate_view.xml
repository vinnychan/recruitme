<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.recruit.recruitme.CandidateView"
    tools:showIn="@layout/activity_candidate_view">

    <ImageView
        android:id = "@+id/profilepicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id = "@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilepicture"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id = "@+id/cardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id = "@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTitle"
        android:autoLink="email"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id = "@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id = "@+id/linkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

    <TextView
        android:id = "@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linkedin"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

    <TextView
        android:id = "@+id/portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resume"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id = "@+id/url1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/portfolio"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

    <TextView
        android:id = "@+id/url2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/url1"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

    <TextView
        android:id = "@+id/url3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/url2"
        android:layout_centerHorizontal="true"
        android:autoLink="web"/>

    <EditText
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/url3"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
